{
  "version": "2.4.0",
  "title": "Micro.Masonry Plus",
  "description": "A advanced Micro.blog plug-in to display your photos page in a configurable masonry-style layout.",
  "includes": [
	"/css/micro-masonry.css"
  ],
  "fields": [
    {
      "field": "params.photos_category",
      "label": "Photos category",
      "placeholder": "Enter your photos category..."
    },
    {
      "field": "params.photos_extensions",
      "label": "Allowed photo extensions",
      "placeholder": "e.g. jpg,jpeg,png,webp"
    },
    {
      "field": "params.photos_columns_desktop",
      "label": "Desktop column count",
      "placeholder": "Default 4"
    },
    {
      "field": "params.photos_columns_tablet",
      "label": "Tablet column count",
      "placeholder": "Default 3"
    },
    {
      "field": "params.photos_columns_mobile",
      "label": "Mobile column count",
      "placeholder": "Default 2"
    },
    {
      "field": "params.photos_show_all",
      "label": "Show all photos per post",
      "type": "boolean",
      "default": true
    },
    {
      "field": "params.photos_layout_mode",
      "label": "Layout mode",
      "placeholder": "columns (default) or rows"
    }
  ]
}
